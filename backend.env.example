# === Required ===
OPENAI_API_KEY=<여기에_실제_OpenAI_API_키>

# === Auth (옵션) ===
AUTH_ENABLED=false
# AUTH_ENABLED=true 일 때 필수:
JWT_SECRET=<여기에_랜덤_문자열_넣기>

# === Database (옵션) ===
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# === CORS (옵션) ===
# For development: use * to allow all origins
ORIGINS=*
# For production: specify exact origins like http://localhost:3000,https://yourdomain.com

# === Rate Limit / Redis (옵션) ===
RATE_LIMIT=50 per minute
# REDIS_URL=redis://default:pass@host:6379/0

# === S3 / MinIO (옵션; 업로드 기능 쓸 때) ===
# AWS_ACCESS_KEY_ID=<여기에>
# AWS_SECRET_ACCESS_KEY=<여기에>
# AWS_DEFAULT_REGION=ap-northeast-2
# AWS_S3_BUCKET=<여기에_버킷명>
# AWS_S3_ENDPOINT_URL=<MinIO면_URL_여기에>